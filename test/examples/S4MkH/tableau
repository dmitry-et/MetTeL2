//equality rules 


@l {l2} / @l2 {l} $;
@l ~({l2})/ @l2 {l2} $;

@l P/ @l {l} $;

@l dia ({l2}) / @l2 {l2} $;
@l P  @l {l2}/  @l2 P $;
@l dia ({l2})  @l2 {l3} / @l dia ({l3}) $;

//Decomposition rules 

 @l ~(~P)   / @l P $; 
 @l (P|Q)   / @l P $| @l Q $;
 @l ~(P|Q)  / @l ~P @l ~Q $;
 // @l (dia (P)) / @l (dia (f[l,P])), @ f[l,P] P $;  
 @l ~ (dia (P)) @l2 {l2} /@l ~(dia ({l2})) $| @l2 ~(P) $;



// Theory rules 
 @l {l} / @l (dia ({l})) $;
 @l {l} @l1 {l1} @l2 {l2} / @l ~(dia ({l2})) $| @l2 ~(dia ({l3})) $| @l1 (dia ({l3})) $;

// Closure rule
 @l P  @l ~(P) / 
// last rule should not have $;
// no comma between formulae

