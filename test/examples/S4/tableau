//equality rules
@l{l2} / @l2{l} $;
@l~{l2} / @l2{l2} $;

@l P / @l{l} $;

@l<>{l2} / @l2{l2} $;
@l P  @l{l2} /  @l2 P $;
@l<>{l2}  @l2{l3} / @l<>{l3} $;

//Decomposition rules

@l ~(~P) / @l P $;
@l(P|Q) / @l P $| @l Q $;
@l~(P|Q) / @l~P @l~Q $;
@l<>P / @l<>{f(l,P)} @f(l,P)P $;
@l ~(<>P) @l<>{l2} / @l2~P $;

// Theory rules
@l{l} / @l<>{l} $;
@l<>{l2} @l2<>{l3} / @l<>{l3} $;

// Closure rule
@l P  @l~P /  $; $; $;
// last rule should not have $;
// no comma between formulae

//Blocking related
@l{l0} / [l=l0] $;
[l=l0] / @l{l0} $;
@l~{l0} / ~([l=l0]) $;
~([l=l0]) / @l~{l0} $;
@l{l} @l0{l0} / [l=l0] $| ~([l=l0]) $;
